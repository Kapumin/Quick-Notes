<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MelNotes" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <item name="android:colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/myAccent</item>
        <item name="android:colorAccent">@color/myAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary</item>
        <!--        my style-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:navigationBarColor">@color/primary</item>
        <item name="android:windowBackground">@color/primary</item>
    </style>

    <style name="myToastTheme">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/colorWhite</item>
        <item name="stFont">@font/ubuntu_regular</item>
        <item name="stTextSize">15sp</item>
        <item name="stColorBackground">@color/primaryDark</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">0.5dp</item>
        <item name="stStrokeColor">@color/colorWhite</item>
        <item name="stLength">SHORT</item>
        LONG or SHORT
        <item name="stGravity">center</item>
        top or center
        <item name="stRadius">16dp</item>
    </style>

</resources>